@model DemoWorkBounty.Workitem
@{
    ViewBag.Title = "detailWorkitem";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<script type="text/javascript">
    $(document).ready(function ()
    {
        var url = document.location.href,
       params = url.split('?')[1].split('&'),
       da = {}, tmp;
        for (var i = 0, l = params.length; i < l; i++) {
            tmp = params[i].split('=');
            da[tmp[0]] = tmp[1];
        
            }
        var id = da.id;

        $.getJSON("/api/openworkitem/" + id,

            function (Data)
            {
                var datalength = Data.length;
                for (var i = 0; i < datalength; i++) {
                    $('#title').append(Data[i].Title);
                    $('#Summary').append(Data[i].Summary);
                   
                    var row = "<tr><td>" + Data[i].StartDate + "</td><td>" + Data[i].DueDate + "</td> <td>" + Data[i].ProposedReward + "</td> <td>" + Data[i].Amount + "</td><td>" + Data[i].Status + "</td></tr>";
          
                    $(row).appendTo($('#tableitems'));
      
                }

            })

        .fail(

            function (jqXHR, textStatus, err) {

                alert('Error: ' + err);

            });
       
    });
        
 
</script>


<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <h4 class="widget-title lighter smaller">
               <label id="title"></label>
            </h4>

        </div>

       
        <div>

        </div>
      
        <div class="widget-header">
            <h4 class="widget-title lighter smaller">
                Details
            </h4>
            <div>
                <label id="Summary"></label>

            </div>

        </div>
        <div>

            <table id="simple-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>


                        <th width="10%">Start Date</th>
                        <th width="10%">Due Date</th>
                        <th width="10%">Rewards</th>
                        <th width="10%">Amount</th>
                        <th width="10%">Status</th>

                    </tr>
                </thead>

                <tbody id="tableitems">
                    
                </tbody>
            </table>
        </div>


        



    </div>
</div>
