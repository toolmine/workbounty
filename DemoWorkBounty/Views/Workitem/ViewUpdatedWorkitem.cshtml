@model List<DemoWorkBounty.WorkItemAssignment>
@{
    ViewBag.Title = "View assignment";
    Layout = "~/Views/_DashboardLayout.cshtml";
}

<script src="~/assets/js/jquery-ViewUpdatedWorkitem.js"></script>
<ul class="breadcrumb">
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="~/home/dashboard" data_toggle="tooltip" , title="Dashboard">Dashboard</a>
    </li>
    <li>
        <a href="javascript:history.back() " data_toggle="tooltip" , title="Workitems which you have added">Items i want done</a>
    </li>
    <li class="active">View updated workitem</li>
</ul>



<div class="widget-box transparent" id="recent-box">
    <div class="widget-header">
        <div class="col-xs-10">
            <h4 class="widget-title lighter smaller padding10pxbottom">
                View Document

            </h4>
        </div>
        <div class="col-sm-10">
            <div class="col-sm-10">
                @if (ViewBag.dataofOpenDocument != null)
                {
                    foreach (DemoWorkBounty.Models.WorkitemDocuments i in ViewBag.dataofOpenDocument)
                    {

                        <div class="col-xs-20  toppadding8px">
                            <div class="col-sm-10">
                                <h5>
                                    Title:    @Html.DisplayFor(a => i.Title)
                                </h5>
                            </div>

                            <div class="widget-box transparent toppadding10px" id="recent-box">
                                <div>

                                    <div class="col-sm-10 toppadding50px">
                                        Summary:  @Html.DisplayFor(a => i.Summary)
                                    </div>

                                </div>
                            </div>
                        </div>
                        break;
                    }
                }

                @if (ViewBag.errorMessage == 0)
                {
                    <div class="col-sm-10">
                        <p class="alert alert-warning">
                            No documents found in current workitem
                        </p>
                    </div>
                }

                @if (ViewBag.displayMessage != null)
                {
                    <div class="col-sm-10">
                        <p class="alert alert-success">
                            You have already send a reward for this workitem
                        </p>
                    </div>
                }

                @if (ViewBag.dataofOpenDocument != null)
                {
                    <div class="col-sm-10">
                      <h4>Details</h4>
                    </div>
    <table id="simple-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th width="10%">Sr No</th>
                <th width="10%">Name</th>
                <th width="10%">Update Time</th>
                <th width="10%">View File</th>
                <th width="10%">Feedback</th>
                <th width="10%">Reward</th>
            </tr>
        </thead>
        @if (ViewBag.dataofOpenDocument != null)
        {
            foreach (DemoWorkBounty.Models.WorkitemDocuments i in ViewBag.dataofOpenDocument)
            {
                
                <tbody>
                    <tr>
                        <td>@(ViewBag.dataofOpenDocument.IndexOf(i) + 1)<input type="hidden" id="userID" value="@i.UserID" /> </td>
                        <td>@Html.DisplayFor(a => i.FirstName)</td>
                        <td>@Html.DisplayFor(a => i.SubmissionDateTime) <input type="hidden" id="Workid" value="@i.WorkItemID" /></td>
                        <td>@Html.ActionLink("Download", "Download", "workitem", new { currentUserID = i.UserID }, new { @class = "btn btn-minier btn-purple", data_toggle = "tooltip", title = "Download documents" }) </td>
                        <td>
                        
                            <select id="feedback" class="selectDropdownValue" name="feedback">
                                <option value="good">Good</option>
                                <option value="average">Average</option>
                                <option value="poor">Poor</option>
                            </select>
                        </td>
                        <td><input type="button" id="@(ViewBag.dataofOpenDocument.IndexOf(i) + 1)" class="btn btn-minier btn-purple" value="Assign Reward" onclick="ApplyReward(this);" data-toggle="tooltip" title="Apply reward to this user" /></td>
                        @*<td><input type="button" id="@i.UserID" class="btn btn-minier btn-purple" value="Assign Reward" onclick="ApplyReward(this);" data-toggle="tooltip" title="Apply reward to this user" /></td>*@
                    </tr>
                </tbody>
        } 
        }
    </table>

            
                }
            </div>


        </div>

    </div>
</div>
