@model List<DemoWorkBounty.Workitem>
@{
    Layout = "~/Views/_DashboardLayout.cshtml";
}
<head>
    <title></title>
    <script src="~/assets/js/EditWorkitem.js"></script>
</head>
<div class="widget-box transparent" id="recent-box">
    <div class="widget-header">
        <div class="col-xs-10">
            <h4 class="widget-title lighter smaller">
                Assign workitems

            </h4>
        </div>
        <div class="col-sm-10">
            <div class="col-sm-10">
                @foreach (DemoWorkBounty.Workitem i in ViewBag.items)
                {
                    <input type="hidden" id="Workid" value="@i.WorkitemID" />
                    <input type="hidden" id="Teamid" value="@i.PublishedTo">
                    <div class="widget  toppadding8px">
                        <div class="col-sm-10">
                            <h5> Title: @Html.DisplayFor(a => i.Title)</h5>
                        </div>

                        <div class="padding10pxbottom"> </div>

                        <div class="widget-box transparent" id="recent-box">
                            <div>

                                <button type="button" class="btn btn-minier btn-success bigger-110" data-toggle="modal" data-target="#myModal" title="Modify document">Modify</button>
                                <div class="container">
                                    <div class="modal" id="myModal" role="dialog">
                                        <div class="modal-dialog modal-lg">
                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Update Workitem</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <table>

                                                        <tr class="padding10pxbottom">
                                                            <td>
                                                                <label class="intro-header" for="form-field-1"> Title </label>
                                                            </td>
                                                            <td>
                                                                <label>
                                                                    <input type="text" id="title" placeholder="" maxlength="50">
                                                                </label>
                                                                <div class="padding10pxbottom"></div>
                                                            </td>
                                                        </tr>

                                                        <tr class="padding10pxbottom">
                                                            <td class="padding10pxbottom">
                                                                <label class="intro-header" for="form-field-1"> Summary </label>
                                                            </td>
                                                            <td class="padding15pxbottom">
                                                                <textarea id="Summary" maxlength="200" class="col-xs-10 col-sm-8" onkeyup="return noSpaceKey(event)"></textarea>
                                                                <div class="padding10pxbottom"></div>
                                                            </td>
                                                        </tr>

                                                        <tr class="padding10pxbottom">
                                                            <td>
                                                                <label class="intro-header" for="form-field-1"> Published to </label>
                                                            </td>
                                                            <td class="padding15pxbottom">
                                                                <label>
                                                                    @Html.DropDownList("TeamList")
                                                                </label>
                                                            </td>
                                            
                                                        </tr>
                                                    </table>
                                                    <table>
                                                        <tr>
                                                            <td class="paddingright20px"> <label class="intro-header" for="form-field-1"> Rewards </label></td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="Visa" id="1" />
                                                                <span class="lbl"><img src="~/assets/img/VISA_Logo.png" class="imgpopup"></span>
                                                            </td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="McDonald's" id="2" />
                                                                <span class="lbl"><img src="~/assets/img/McDonald's_Golden_Arches.svg.png" class="imgpopup"></span>
                                                            </td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="PayTM" id="3" />
                                                                <span class="lbl"><img src="~/assets/img/VFsaWo_G.jpeg" class="imgpopup" /></span>
                                                            </td>
                                                         
                                                        </tr>
                                                        <tr>
                                                            <td></td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="Google Wallet" id="4" />
                                                                <span class="lbl"><img src="~/assets/img/GoogleWallet.png" class="imgpopup" /></span>
                                                            </td>

                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="PayPal" id="5" />
                                                                <span class="lbl"> <img src="~/assets/img/Paypal_2014_logo.png" class="imgpopup" /></span>
                                                            </td>

                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="American Express" id="6" />
                                                                <span class="lbl"><img src="~/assets/img/americanexpress.jpg" class="imgpopup" /></span>
                                                            </td>
                                                                                                                    </tr>
                                                        <tr>
                                                            <td></td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="Western Union" id="7" />
                                                                <span class="lbl"><img src="~/assets/img/Western-Union-logo-old.jpg" class="imgpopup" /></span>
                                                            </td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="WePay" id="8" />
                                                                <span class="lbl"><img src="~/assets/img/Wepay_Logo_.png" class="imgpopup" /></span>
                                                            </td>

                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="Bitcoin" id="9" />
                                                                <span class="lbl"><img src="~/assets/img/bitcoin.jpg" class="imgpopup" /></span>
                                                            </td>
                                                         
                                                        </tr>
                                                        <tr>
                                                            <td></td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="Amazon" id="10" />
                                                                <span class="lbl"><img src="~/assets/img/amazon-dgmag.png" class="imgpopup" /></span>
                                                            </td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="Dominos" id="11" />
                                                                <span class="lbl"><img src="~/assets/img/2000px-Dominos_pizza_logo.svg.png" class="imgpopup" /></span>
                                                            </td>
                                                            <td>
                                                                <input name="formfieldradio" type="radio" class="" value="ShoppersShop" id="12" />
                                                                <span class="lbl"><img src="~/assets/img/shoppersshop.jpg" class="imgpopup" /></span>
                                                            </td>
                                                        </tr>
                                                    
                                                    </table>
                                                    <table>
                                                        <tr>
                                                            <td class="paddingright20px">  <label class="intro-header" for="form-field-1"> Amount </label></td>
                                                            <td class="padding10px">
                                                                <label>
                                                                    <input type="text" id="amount" placeholder="" onkeypress="return isNumberKey(event)" maxlength="10" />
                                                                </label>
                                                            </td>
                                                            <td class="padding10px"><input type="hidden" id="Userid" value="@Session["UserID"]" /><input type="button" class="btn btn-info btn-xs ace-icon fa fa-check bigger-110" id="btn" value="Save" data_toggle="tooltip" , title="Submit data" /></td>
                                                            <td class="padding5px"><input type="reset" class="btn btn-xs ace-icon fa fa-undo bigger-110" value="Reset" data_toggle="tooltip" , title="Reset data" /></td>
                                                            </tr>
                                                        
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                        <div class="widget-box transparent" id="recent-box">
                            <div>

                                <div class="col-sm-10 toppadding50px">
                                    Summary:  @Html.DisplayFor(a => i.Summary)

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="">

                        <h4 class="widget-title lighter smaller col-sm-6">
                            Details
                        </h4>

                        <input type="hidden" id="Userid" value="@Session["UserID"]" />
                        <div class="col-sm-10">
                            <table id="simple-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="5%">Start Date</th>
                                        <th width="4%">Due Date</th>
                                        <th width="5%">Rewards</th>
                                        <th width="4%">Amount</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Html.DisplayFor(a => i.StartDate)</td>
                                        <td>@Html.DisplayFor(a => i.DueDate)</td>
                                        <td>@Html.DisplayFor(a => i.ProposedReward)</td>
                                        @if (i.Amount != null)
                                        {
                                            <td>$@Html.DisplayFor(a => i.Amount)</td>
                                        }
                                        else
                                        {
                                            <td>@Html.DisplayFor(a => i.Amount)</td>
                                        }

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                }
            </div>




        </div>
    </div>
</div>
