@model List<DemoWorkBounty.Workitem>
@{
    ViewBag.Title = "ApplyWorkitem";
    Layout = "~/Views/_DashboardLayout.cshtml";
}

<script src="~/assets/js/jquery-ApplyWorkitem.js"></script>
<ul class="breadcrumb">
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="~/home/dashboard" data_toggle="tooltip" , title="Dashboard">Dashboard </a>
    </li>
    <li>
        <a href="~/Home/Viewitemsinterestedin" data_toggle="tooltip" , title="Workitems which you've interested">Items I Am Interested In</a>
    </li>
    <li class="active">Apply for Workitems</li>
</ul>

<div class="widget-box transparent" id="recent-box">
    <div class="widget-header">
        <div class="col-xs-10">
            <h4 class="widget-title lighter smaller">
              Apply workitem

            </h4>
        </div>
        <div class="col-sm-10">
            <div class="col-sm-10">
                @foreach (var item in Model)
                {
                    <input type="hidden" id="Workid" value="@item.WorkitemID" />

                    <div class="widget  toppadding8px">
                        <div class="col-sm-10">
                            <h5> Title: @Html.DisplayFor(a => item.Title)</h5>
                        </div>
                        <div class="padding10pxbottom"> </div>
                        <div class="widget-box transparent" id="recent-box">
                            <div>

                                <div class="col-sm-10 toppadding50px">
                                    Summary:  @Html.DisplayFor(a => item.Summary)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="">

                        <h4 class="widget-title lighter smaller col-sm-6">
                            Details
                        </h4>

                        <input type="hidden" id="Userid" value="@Session["UserID"]" />
                        <div class="col-sm-10">
                            <table id="simple-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>

                                        <th width="10%">Start Date</th>
                                        <th width="10%">Due Date</th>
                                        <th width="10%">Rewards</th>
                                        <th width="10%">Amount</th>
                                        <th width="10%">Option</th>
                                        <th width="10%">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Html.DisplayFor(a => item.StartDate)</td>
                                        <td>@Html.DisplayFor(a => item.DueDate)</td>
                                        <td>@Html.DisplayFor(a => item.ProposedReward)</td>
                                        @if (item.Amount != null)
                                        {
                                            <td>$@Html.DisplayFor(a => item.Amount)</td>
                                        }
                                        else
                                        {
                                            <td>@Html.DisplayFor(a => item.Amount)</td>
                                        }
                                        <td>
                                            <select id="open">
                                                <option value="false">Open</option>
                                                <option value="true">Exclusive</option>

                                            </select>
                                        </td>
                                        <td><input type="submit" value="Apply" onclick="register()" class="btn btn-minier btn-purple" data-toggle="tooltip" title="Apply for current workitem" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>


