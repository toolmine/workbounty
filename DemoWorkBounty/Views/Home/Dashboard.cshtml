@model List<DemoWorkBounty.Models.AddWorkitems>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/_DashboardLayout.cshtml";
}
<ul class="breadcrumb">
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="~/home/dashboard" data_toggle="tooltip" , title="Dashboard">Dashboard</a>
    </li>
</ul>

<h2></h2>
<div class="col-md-6"></div>
<div class="col-sm-6 col-lg-4">
</div>
<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <div class="col-xs-8">
                <h4 class="widget-title lighter smaller">
                    <a href="@Url.Action("Viewitemsiwantdone", "Home")" data-toggle="tooltip" title="Workitems which you have added ">Items i want done</a>
                    | @Html.ActionLink("Add workitem", "addworkitem", "Home", new { data_toggle = "tooltip", title = "Items which you want to upload" })
                </h4>
            </div>

            <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-8">
                    <table id="simple-table" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="3%">Sr No</th>
                                <th width="20%">Title</th>
                                <th width="7%">Start Date</th>
                                <th width="7%">End Date</th>
                                <th width="8%">Assign to</th>
                                <th width="7%">Rewards</th>
                                <th width="5%">Status</th>
                                <th width="5%">Feedback</th>
                            </tr>
                        </thead>

                        @foreach (DemoWorkBounty.Models.AddWorkitems item in ViewBag.itemsForIWantDone)
                        {

                            <tbody>
                                <tr>
                                    <td>@(ViewBag.itemsForIWantDone.IndexOf(item) + 1)</td>
                                    <td>@Html.ActionLink(item.Title, "ViewAssignedworkitem", "Workitem", new { currentWorkitemID = item.WorkitemID, data_toggle = "tooltip", title = "Get detail of workitem" }, null) </td>
                                    <td>@Html.DisplayFor(a => item.StartDate)</td>
                                    <td>@Html.DisplayFor(a => item.EndDate)</td>
                                    <td>@Html.DisplayFor(a => item.FirstName)</td>
                                    <td>@Html.DisplayFor(a => item.ProposedReward)</td>
                                    <td>@Html.DisplayFor(a => item.Status)</td>
                                    <td>@Html.DisplayFor(a => item.Remarks)</td>
                                </tr>
                            </tbody>
                            if ((ViewBag.itemsForIWantDone.IndexOf(item) + 1) == 5)
                            {
                                break;
                            }
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <div class="col-xs-8">
                <h4 class="widget-title lighter smaller">
                    @Html.ActionLink("Items i'm working on", "Viewitemsimworkingon", "Home", new { data_toggle = "tooltip", title = "Items which you have assigned" })

                </h4>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-8">
                    <table id="simple-table" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="3%">Sr No</th>
                                <th width="20%">Title</th>
                                <th width="7%">Start Date</th>
                                <th width="7%">End Date</th>
                                <th width="8%">Client</th>
                                <th width="7%">Rewards</th>
                                <th width="4%">Amount</th>
                                <th width="5%">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>

                        @foreach (DemoWorkBounty.Models.AssignWorkitems myWorkitem in ViewBag.itemsForAssigntoMe)
                        {
                            <tr>
                                <td>@(ViewBag.itemsForAssigntoMe.IndexOf(myWorkitem) + 1)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.Title)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.StartDate)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.EndDate)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.FirstName)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.ProposedReward)</td>
                                @if (myWorkitem.Amount != null)
                                {
                                    <td>$@Html.DisplayFor(a => myWorkitem.Amount)</td>
                                }
                                else
                                {
                                    <td>@Html.DisplayFor(a => myWorkitem.Amount)</td>
                                }

                                @if (myWorkitem.AssigntoUserID == 1)
                                {
                                    <td>@Html.ActionLink("Update", "UpdateWorkitem", "workitem", new { currentWorkitemID = myWorkitem.WorkitemID }, new { @class = "btn btn-minier btn-purple", data_toggle = "tooltip", title = "Submit assignments " }) </td>
                                }
                                else
                                {
                                    <td>Pending for approve</td>
                                }
                            </tr>
                                if ((ViewBag.itemsForAssigntoMe.IndexOf(myWorkitem) + 1) == 5)
                                {
                                    break;
                                }

                        }
                    </table>


                </div>
            </div>

        </div>
    </div>
</div>
<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <div class="col-xs-8">
                <h4 class="widget-title lighter smaller">
                    @Html.ActionLink("Items you might be interested in", "Viewitemsinterestedin", "Home", new { data_toggle = "tooltip", title = "Items which are in interested in" })
                </h4>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-8">
                    <table id="OpenWorkitem" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="3%">Sr No</th>
                                <th width="15%">Title</th>
                                <th width="3%">Created By</th>
                                <th width="15%">Summary</th>
                                <th width="7%">Rewards</th>
                                <th width="4%">Amount</th>
                                <th width="3%">Attached File</th>
                                <th width="3%">Action</th>
                                <th width="3%">Add to Favourites</th>
                            </tr>
                        </thead>

                        @foreach (DemoWorkBounty.Models.OpenWorkitems i in ViewBag.itemsForAllWorkitem)
                        {
                            <tbody>
                                <tr>
                                    <td>@(ViewBag.itemsForAllWorkitem.IndexOf(i) + 1)</td>
                                    <td>@Html.DisplayFor(a => i.Title)</td>
                                    <td>@Html.DisplayFor(a => i.FirstName)</td>
                                    <td>@Html.DisplayFor(a => i.Summary)</td>
                                    <td>@Html.DisplayFor(a => i.ProposedReward)</td>

                                    @if (i.Amount != null)
                                    {
                                        <td>$@Html.DisplayFor(a => i.Amount)</td>
                                    }
                                    else
                                    {
                                        <td>@Html.DisplayFor(a => i.Amount)</td>
                                    }
                                    <td>@if(i.DocumentFilePath != null)
                                        { 
                                        @Html.ActionLink("View", "ViewAttachedDocument", "workitem", new { workitemID = i.WorkitemID }, new { @class = "btn btn-minier btn-purple", data_toggle = "tooltip", title = "Download document" }) }</td>

                                    <td>@Html.ActionLink("Apply", "ApplyWorkitem", "workitem", new { currentWorkitemID = i.WorkitemID }, new { @class = "btn btn-minier btn-purple", data_toggle = "tooltip", title = "Apply for workitem" }) </td>
                                    <td>
                                        @if (i.IsFavourite == true)
                                        {
                                            <input type="checkbox" checked="checked" onclick="RemoveFavourite(@i.WorkitemID);" value="@i.WorkitemID" data_toggle="tooltip" , title="Remove as a favourite">
                                        }
                                        else
                                        {
                                            <input type="checkbox" onclick="AddFavourites(@i.WorkitemID);" value="@i.WorkitemID" data_toggle="tooltip" , title="Add as a favourite">
                                        }
                                    </td>
                                </tr>
                            </tbody>
                                        if ((ViewBag.itemsForAllWorkitem.IndexOf(i) + 1) == 5)
                                        {
                                            break;
                                        }


                        }
                    </table>
                    <input type="hidden" id="UserId" value="@Convert.ToInt32(Session["UserID"])" />
                </div>
            </div>
        </div>
    </div>
</div>