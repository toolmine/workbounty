@model DemoWorkBounty.UserInfo
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/_IndexLayout.cshtml";
}
<script src="~/assets/js/jquery-signup.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                    </div>
                    <div class="space-6"></div>
                    @Html.AntiForgeryToken()

                    <div class="position-relative">
                        <div id="signup-box" class="signup-box widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header green lighter bigger">
                                        <i class="ace-icon fa fa-users blue"></i>
                                        New User Registration
                                    </h4>
                                    <div class="space-6">
                                        

                                    </div>
                                    <p> Enter your details to begin: </p>


                                    <form id="form1">
                                        <fieldset>
                                            <p class="ui-icon-alert alert-danger" id="alertMessage">Email id already exists</p>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">

                                                    @Html.TextBoxFor(a => a.Email, new { @id = "Email", @maxlength = "30", @class = "form-control", @placeholder = "E mail", @typeof = "email" })
                                                    <span id="EmailError" class="text-danger"></span>
                                                </span>

                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.PhoneNumber, new { @id = "PhoneNumber", @maxlength = "15", @onkeypress = "return isNumberKey(event)", @class = "form-control", @placeholder = "Number" })
                                                    <span id="PhoneNumberError" class="text-danger"></span>
                                                </span>

                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.FirstName, new { @id = "FirstName", @maxlength = "30", @onkeypress = "return isTextKey(event)", @class = "form-control", @placeholder = "First Name" })
                                                    <span id="FirstNameError" class="text-danger"></span>
                                                </span>

                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.LastName, new { @id = "LastName", @maxlength = "30", @onkeypress = "return isTextKey(event)", @class = "form-control", @placeholder = "Last Name" })
                                                    <span id="LastNameError" class="text-danger"></span>
                                                </span>

                                            </label>
                                            <div class="block clearfix">
                                                <div class="hero-unit">

                                                    @Html.TextBoxFor(a => a.DateOfBirth, new { @class = "form-control datepicker", @onkeypress = "return noDataKey(event)", @maxlength = "15", @placeholder = "Date of Birth", @id = "DateSelect", @name = "DateofBirth" })
                                                    <span id="DateofBirthError" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <label class="block clearfix" style="padding-top:5px;">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.PasswordFor(a => a.Password, new { @id = "Password", @onkeypress = "return disableclick(event)", @maxlength = "20", @class = "form-control", @placeholder = "Password" })
                                                    <span id="PasswordError" class="text-danger"></span>
                                                </span>

                                            </label>

                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.PasswordFor(a => a.Password, new { @id = "ConfirmPassword", @onkeypress = "return disableclick(event)", @maxlength = "20", @class = "form-control", @placeholder = "Confirm Password" })
                                                    <span id="ConfirmPasswordError" class="text-danger"></span>
                                                </span>

                                            </label>
                                          
                                              <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.InterestedKeywords, new { @id = "InterestedKeywords", @maxlength = "10", @class = "form-control", @placeholder = "Interested Keywords" })
                                                    <span id="InterestedKeywordsError" class="text-danger"></span>
                                                </span>

                                            </label>
                                            <div class="space-6"></div>
                                            <div class="clearfix">
                                                <div>

                                                    <a href="~/Home/Login" class="user-signup-link">
                                                        <i class="ace-icon fa fa-arrow-left"></i> Back To login

                                                    </a>
                                                    <input id="btnSubmit" type="submit" class="btn btn-primary pull-right" value="Signup" />

                                                </div>

                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}

