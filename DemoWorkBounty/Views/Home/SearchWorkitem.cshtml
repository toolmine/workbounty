@model List<DemoWorkBounty.Workitem>
       @{
    ViewBag.Title = "Searh result";
    Layout = "~/Views/_DashboardLayout.cshtml";
}
<ul class="breadcrumb">
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="~/home/dashboard">Dashboard</a>
    </li>
    <li class="active">Search</li>
</ul>

<div class="widget-box transparent padding10xbottom" id="recent-box">
    <div class="col-xs-8 widget-header">
        <h4 class="widget-title lighter smaller" data_toggle="tooltip" , title="Search items">
              Search Items
        </h4>
    </div>
</div>


@if (ViewBag.displayMessage !=null)
{
    <div class="col-sm-10">
        <p class="ui-icon-alert alert-success">
            No Results found
        </p>
    </div>
}

<div class="col-sm-8 toppadding10px">
    <div class="widget-box transparent" id="recent-box">


        <div>
            <table id="simple-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>

                        <th width="10%">Title</th>
                        <th width="10%">Start Date</th>
                        <th width="10%">Due Date</th>
                        <th width="10%">Reward</th>
                        <th width="10%">Amount</th>

                    </tr>
                </thead>
                @if (ViewBag.dataForSearchItem != null)
                {
                    foreach(DemoWorkBounty.Workitem item in ViewBag.dataForSearchItem)
                    {
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(a => item.Title)</td>
                                <td>@Html.DisplayFor(a => item.StartDate)</td>
                                <td>@Html.DisplayFor(a => item.DueDate)</td>
                                <td>@Html.DisplayFor(a => item.ProposedReward)</td>
                                @if (item.Amount != null)
                                {
                                    <td>$@Html.DisplayFor(a => item.Amount)</td>
                                }
                                else
                                {
                                    <td>@Html.DisplayFor(a => item.Amount)</td>
                                }
                            </tr>
                        </tbody>
                    }
                }
                else
                {
                    ViewBag.displayMessage("No record exists");
                }
                
                
                               
            </table>
        </div>
    </div>
</div>

