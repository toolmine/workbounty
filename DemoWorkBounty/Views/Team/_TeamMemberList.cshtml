@model List<DemoWorkBounty.Models.TeamInformation>
<script src="~/assets/js/UpdateTeamName.js"></script>
<div class="col-xs-10">
    <div class="widget-header">
        <p class="alert alert-danger" id="removeTeamError">Failed! Can not remove team at this moment</p>
        <div class="col-xs-10"> <h4 class="widget-title lighter smaller">@ViewBag.TeamName</h4></div>
        <input type="hidden" id="oldteamname" value="@ViewBag.TeamUserInfoId">
       <h5 class="widget-title lighter smaller" data-toggle="modal" data-target="#myModal" title="Change team name"><a>Change |</a></h5>
        <h5 class="widget-title lighter smaller"> <a onclick="RemoveTeam()">Remove</a></h5>

    </div>
    <div class="container">
        <div class="modal" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Change team name</h4>
                    </div>
                    <div class="modal-body">
                        <p class="ui-icon-alert alert-danger" id="alertMessage">Team name already exists</p>
                        <label class="intro-header" for="form-field-1"> Enter new team name </label>
                        <label>
                            <input type="text" id="teamname" placeholder="" onkeypress="return isNumberKey(event)" maxlength="30" />
                        </label>
                        <input type="button" class="btn btn-info btn-xs ace-icon fa fa-check bigger-110" id="btn" value="Save" data_toggle="tooltip" , title="Submit data" />
                   </div>
                </div>
            </div>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <table id="simple-table1" class="table table-striped table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Member</th>
                    <th>Email</th>
                    <th>Contact No</th>
                    <th>Action</th>
                </tr>
                @foreach (var user in item.TeamUserList)
                {
                    <tr>
                        <td>@Html.DisplayFor(s => user.FirstName)</td>
                        <td>@Html.DisplayFor(s => user.Email)</td>
                        <td>@Html.DisplayFor(s => user.PhoneNumber)</td>
                        <td><input type="button" id="@user.UserID" value="Delete Member" data-teamuserid="@user.TeamUserInfoID" onclick="removeMember(this);" class="btn btn-minier btn-purple" data-toggle="tooltip" title="Remove member from team"></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>