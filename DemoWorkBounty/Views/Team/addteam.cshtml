@{
    ViewBag.Title = "AddTeam";
    Layout = "~/Views/_DashboardLayout.cshtml";
}

<script src="~/assets/js/jquery-AddTeam.js"></script>

<h2>Add team</h2>
<body id="body">
    <div class="col-sm-10">
        <div class="widget-box transparent" id="recent-box">
            <div class="widget-header">
                <div class="alert alert-danger" id="alertMessage">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="ace-icon fa fa-times"></i>
                    </button>

                    <strong>
                        <i class="ace-icon fa fa-times"></i>
                        Failed!
                    </strong>
                            Team name should not be empty.
                    <br>
                </div>
                <div class="col-xs-8">
                    <h4 class="widget-title lighter smaller">
                        <a href="~/Team/AddTeam">Add Team</a>
                    </h4>
                </div>
                <div class="row">
                    <div class="col-md-5"></div>
                    <div class="col-sm-12" id="addTeamData">
                        <p class="ui-icon-alert alert-success" id="teamAlertMessage"> Team created successfully!</p>
                        <p class="ui-icon-alert alert-danger" id="teamWarningMessage"> Team Already exists.</p>
                        <input type="text" id="txtTeamName" placeholder="" class="col-xs-10 col-sm-5" maxlength="20"  />&nbsp;
                        <input type="hidden" id="Userid" value="@Session["UserID"]" />
                        <input type="button" value="Submit" onclick="submit();" class="btn btn-minier btn-success TeamLayoutButton" data-toggle="tooltip" title="Create team" id="AddTeamButton" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="widget-box transparent" id="recent-box1">
            <div class="widget-header">
                <div class="col-xs-8">
                    <h4 class="widget-title lighter smaller">
                        Add Member
                    </h4>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-sm-9">
                        <input type="text" id="itId" size="5" class="col-xs-10 col-sm-5" />&nbsp;
                        <input type="hidden" id="Searchid" value="@Session["UserID"]" />
                        <input type="button" value="Search" onclick="show();" class="btn btn-minier btn-purple" /> &nbsp;
                    </div>
                    <div class=".col-xs-4.col-sm-2 no-padding-right">
                        <div class="col-xs-4">
                            <p class="alert alert-warning" id="memberAlreadyExist">Member Already exist</p>
                            <p class="alert alert-warning" id="noDateFoundMessage"> No member name found!</p>
                            <table id="simple-table" class="table table-striped table-bordered table-hover">
                                <tbody id="items"></tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
